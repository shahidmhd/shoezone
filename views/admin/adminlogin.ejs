<div class="container">
    <div class="row">
        <div class="col-lg-3 col-md-2"></div>
        <div class="col-lg-6 col-md-8 login-box">
            <div class="col-lg-12 login-key">
                <i class="fa fa-key" aria-hidden="true"></i>
            </div>
            <div class="col-lg-12 login-title">
                ADMIN PANEL
            </div>
            <% if(adminlogErr){%>
                    <span id="login-error" class="error text-danger"><%=adminlogErr%></span>    
           <%}%>
           
           <script>
            setTimeout(() => {
                document.querySelector('#login-error').style.display="none"
            },3000);
           </script>

            <div class="col-lg-12 login-form">
                <form action="/admin/adminlogin" method="post">
                  <div class="col-lg-12 login-form">
                        <div class="form-group">
                            <label  name="email" class="form-control-label">your email</label>
                            <input type="text" name="email" class="form-control">
                        </div>
                        <div class="form-group">
                            <label name="password" class="form-control-label">PASSWORD</label>
                            <input type="password" name="password" class="form-control" i>
                        </div>

                        <div class="col-lg-12 loginbttm">
                            <div class="col-lg-6 login-btm login-button">
                                <button type="submit" class="btn btn-outline-primary">LOGIN</button>
                            </div>
                        </div>
                    </div>
                </form>
             </div>
        <div class="col-lg-3 col-md-2"></div>
     </div>
</div>
    

    <link href="/css/adminlogin.css" rel="stylesheet" media="all">