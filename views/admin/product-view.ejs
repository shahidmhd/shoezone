

<div class="page-wrapper">
  <div class="main-content">
      <div class="section__content section__content--p30">
          <div class="container-fluid">
              <div class="row">
                  <div class="col-md-12">
                      <div class="overview-wrap">
                          <h2 class="title-1">PRODUCT DETAILS</h2>
                          <button class="au-btn au-btn-icon au-btn--blue"></button>
                            <a href="/admin/add-product" class="btn btn-dark float-right ">Add Product</a>
                      </div>
                  </div>
              </div>
              <div class="row m-t-25">
                <div class="row">
                  <div class="col-lg-12">
                      <div class="table-responsive table--no-card m-b-40">
                          <table class="table table-borderless table-striped table-earning"  id="productsTable">
                            <thead class="thead-dark">
                              <tr>
                                <th scope="col">number </th>
                                <th scope="col">productname</th>
                                <th scope="col">category</th>
                                <th scope="col">brand</th>
                                <th scope="col">description</th>
                                <th scope="col">Price</th>
                                <th scope="col">quantity</th>
                                <th scope="col">option</th>
                                <th scope="col">option</th>
                                <th scope="col">image</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% for(var i=0; i < products.length; i++) { %>
                                    <tr>
                                        <th scope="row"><%=i+1%></th></th>
                                        <td><%=products[i].productname %></td>
                                        <td><%=products[i].categorydetails[0].categoryname%></td>
                                        <td><%=products[i].branddetails[0].brandname%></td>
                                        <td><%=products[i].description %></td>
                                        <td><%=products[i].price %></td>
                                        <td><%=products[i].quantity %></td>
                                         <td><a href="/admin/editproduct/<%= products[i]._id%>" class="btn btn-primary">EDIT</a></td>
                
                                          <%if(products[i].isdeleted){%>
                                            <td><button type="submit" class="btn btn-success" data-toggle="modal" data-target="#myModal<%=products[i]._id %>">LIST</button></td>
                                          <%}else{%>
                                            <td><button type="submit" class="btn btn-danger" data-toggle="modal" data-target="#myModal<%=products[i]._id %>">UNLIST</button></td>
                                         <% }%>
                                       
                                         <td><img src="<%= products[i].imagesurl[0] %>" style="height: 50px;width: 50px;"></td>
                                          
                                        
                                    </tr>
                                   
                                    <% } %>
                            </tbody>
                          </table>
                      </div>
                  </div>
              </div>

        </div>
    </div>
  </div>  
</div>

<!---------modal----------->

<% for(var i=0; i < products.length; i++) { %>
  <div class="modal fade" id="myModal<%=products[i]._id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header" style="justify-content: center;">
          <h4 class="modal-title" id="myModalLabel" >alert</h4>
        </div>
        <div class="modal-body">
          <p> are you sure ?</p>
  
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%if(products[i].isdeleted){%>
          <a href="/admin/deleteproduct/<%=products[i]._id%>"  class="btn btn-success">list</a>
          <%}else{%>
            <a href="/admin/deleteproduct/<%=products[i]._id%>"  class="btn btn-danger">unlist</a>
            <% }%>
        </div>
      </div>
    </div>
  </div>
<% } %>

<!---------modal end-------->

<script>

  $(function () {
    $('#productsTable').DataTable();
  });
  </script>